<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="2dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/easy_test_iv_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/easy_test_ic_brightness_low_black_24dp" />

    <LinearLayout
        android:visibility="visible"
        android:id="@+id/easy_test_ll"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <Button
            android:layout_marginTop="6dp"
            android:textSize="12sp"
            android:id="@+id/easy_test_btn_leak"
            android:layout_width="wrap_content"
            android:text="内存"
            android:background="@drawable/easy_test_btn_background"
            android:layout_height="wrap_content"/>
        <Button
            android:layout_marginTop="6dp"
            android:textSize="12sp"
            android:id="@+id/easy_test_btn_block"
            android:layout_width="wrap_content"
            android:background="@drawable/easy_test_btn_background"
            android:text="卡顿"
            android:layout_height="wrap_content"/>
        <Button
            android:layout_marginTop="6dp"
            android:textSize="12sp"
            android:id="@+id/easy_test_btn_log"
            android:background="@drawable/easy_test_btn_background"
            android:layout_width="wrap_content"
            android:text="日志"
            android:layout_height="wrap_content"/>
        <Button
            android:layout_marginTop="6dp"
            android:textSize="12sp"
            android:id="@+id/easy_test_btn_crash"
            android:background="@drawable/easy_test_btn_background"
            android:layout_width="wrap_content"
            android:text="崩溃"
            android:layout_height="wrap_content"/>
        <Button
            android:layout_marginTop="6dp"
            android:textSize="12sp"
            android:id="@+id/easy_test_btn_http"
            android:background="@drawable/easy_test_btn_background"
            android:layout_width="wrap_content"
            android:text="网络"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>